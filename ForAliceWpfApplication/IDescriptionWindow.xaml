<Page x:Class="ForAliceWpfApplication.IDescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Игра" Height="600" Width="825">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="44" Text = "Я" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock  Grid.Column="1" Grid.Row="0" FontSize="32" 
                            Text="Заполните полностью все предложенные поля, ничего не пропуская." TextWrapping="Wrap" />
            <Button x:Name="ButtonOnward" Grid.Column="1" Grid.Row="3" Content="Далее" FontSize="18" VerticalAlignment="Top" 
                    HorizontalAlignment="Right" Click="ButtonOnward_Click" Padding="25,5" FontWeight="Bold"
                    Background="#95b3d7" BorderBrush="#93cddd" Margin="0"/>
        </Grid>

    </Grid>
</Page>
